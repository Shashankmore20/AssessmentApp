<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_new"
    tools:context=".activity.RegistrationActivityBefore">

    <TextView
        android:id="@+id/register_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register As ..."
        android:fontFamily="@font/poppins_medium"
        android:textSize="26sp"
        android:layout_marginBottom="10dp"
        android:textColor="#2C2C2C"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/register_txt"
        android:layout_above="@id/alreadyLoginTxt"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/teacher_button"
            android:layout_width="210dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:background="@drawable/teacher_register"
            android:elevation="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teacher"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/parent_button"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:layout_marginTop="100dp"
            android:background="@drawable/parent_register"
            android:elevation="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parent"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/alreadyLoginTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Registered?"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:layout_marginStart="60dp"
        android:layout_alignParentStart="true"
        android:textColor="@color/appcolor_dark"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/alreadyLoginTxtBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Here"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/alreadyLoginTxt"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/appcolor_dark"
        android:textAlignment="textStart"/>

</RelativeLayout>